<div class="small-4 small-centered columns">
  <% @genres.each do |genre| %>
  <h2><%= genre.name %></h2>
  <%= link_to "Show", genre, class: "tiny button" %>
  <%= link_to "Edit", edit_genre_path(genre), class: "tiny button" if can? :edit, genre %>
  <%= link_to "Delete!", genre_path(genre), method: :delete, data: {confirm: "Are you sure"}, class: "tiny button" if can? :destroy, genre %>
  <% end %>
</div>