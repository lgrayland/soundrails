<div class="small-6 small-centered columns">
<h1>Choose a track</h1>

<%#= search_form_for @q do |f| %>
<p>
  <%#= f.label :name_cont %>
  <%#= f.text_field :name_cont %>
</p>
<!-- <p>
  <%#= f.label :author_name_start %>
  <%#= f.text_field :author_name_start %>
</p> -->
<p>
  <%#= f.submit %>
</p>
<%# end %>

<% @tracks.each do |track| %>

<h2><%= track.name %></h2>
<%#= image_tag recipe.recipe_image.thumb.url %>
<br>
<%= link_to "Show", track %> | 
<%= link_to "Edit", edit_track_path(track) %> |
<%= link_to "Delete!", track_path(track), method: :delete, data: {confirm: "Are you sure"} %>

<% end %>
<br>
<%= link_to 'New Track', new_track_path %>
</div>