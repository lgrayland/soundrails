<div class="small-6 small-centered columns">
  <h1>Choose a track</h1>

  <% @tracks.each do |track| %>

  <h2><%= track.name %></h2>
  <audio controls="controls">
    <source src="<%= track.track_file.url %>" />    
    </audio>

    <br>
    <%= link_to "Show", track %> | 
    <%= link_to "Edit", edit_track_path(track) %> |
    <%= link_to "Delete!", track_path(track), method: :delete, data: {confirm: "Are you sure"} %>

    <% end %>
    <br>
    <%= link_to 'New Track', new_track_path %>
  </div>